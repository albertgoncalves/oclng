is_even {
    \x {
        switch (= x 0) {
            (is_odd (- x 1))
        } {
            1
        }
    }
}

is_odd x {
    switch (= x 0) {
        let f (is_even);
        (f (- x 1))
    } {
        0
    }
}

entry {
    let x 1234567;
    (printf
        "%ld is %s\n"
        x
        switch (= ((is_even) x) 1) { let y "odd"; y } { "even" });
    0
}
